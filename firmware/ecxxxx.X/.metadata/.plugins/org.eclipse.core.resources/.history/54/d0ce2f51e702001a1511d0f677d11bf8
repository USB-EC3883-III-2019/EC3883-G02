unsigned int p_actual=90;		// posicion inicial en la que se enciende la torre
unsigned int p_final=90;

void mover_cuadrante(unsigned int posicion_final)
{		
	char secuencia[8]={0b00110100,0b00110110,0b00110010,0b00111010,0b00111000,0b00111001,0b00110001,0b00110101};
	
	while(p_actual<p_final & p_actual<180)
	{
		p_actual++;
	}
	
	while(p_actual>p_final & p_actual>0)
		{
			p_actual--;
		}
	int temp=p_actual%8;		
		Byte1_PutVal(temp);
}

