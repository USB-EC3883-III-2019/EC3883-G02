}

void  AS1_OnFullRxBuf(void)
{ 
	  char b[4];
	  unsigned int ptr4;
	  AS1_RecvBlock(b,4,&ptr4);
	  if((b[0] & 0b10000000) == 0b10000000){
	  mensaje= ( b[0]<<4 ) | ( b[1] & 0b00001111 ) ;  // 8 BITS DE MENSAJE
	  z1= ( b[2] & 0b00111000 ) >> 3;
	  z2= ( b[2] & 0b00000111);
	  z3= ( b[3] & 0b00111000) >> 3;
	  z4= ( b[3] & 0b00000111);
	  a[0]=b[0];
	  a[1]=b[1];
	  a[2]=b[2];
	  a[3]=b[3];
	  ptr4=0;
	  }
	  AS1_ClearRxBuf();
  /* Write your code here ... */
}

